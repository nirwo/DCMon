<div class="row">
  <div class="col-md-3">
    <div class="filter-sidebar border p-3 mb-3">
      <h5>Filters</h5>
      <form id="filter-form">
         <!-- Your filter fields remain unchanged -->
         <div class="mb-2">
            <label for="filterOwner" class="form-label">Owner</label>
            <input type="text" id="filterOwner" class="form-control" placeholder="Owner">
         </div>
         <div class="mb-2">
            <label for="filterApp" class="form-label">Application</label>
            <input type="text" id="filterApp" class="form-control" placeholder="Application">
         </div>
         <div class="mb-2">
            <label for="filterServer" class="form-label">Server</label>
            <input type="text" id="filterServer" class="form-control" placeholder="Server">
         </div>
         <div class="mb-2">
            <label for="filterSeqMin" class="form-label">Sequence Min</label>
            <input type="number" id="filterSeqMin" class="form-control" placeholder="0">
         </div>
         <div class="mb-2">
            <label for="filterSeqMax" class="form-label">Sequence Max</label>
            <input type="number" id="filterSeqMax" class="form-control" placeholder="5">
         </div>
         <div class="mb-2">
            <label for="filterStatus" class="form-label">Status</label>
            <select id="filterStatus" class="form-select">
              <option value="all">All</option>
              <option value="online">online</option>
              <option value="offline">offline</option>
              <option value="shutdown">shutdown</option>
            </select>
         </div>
         <div class="mb-2">
            <label for="filterPingable" class="form-label">Pingable</label>
            <select id="filterPingable" class="form-select">
              <option value="all">All</option>
              <option value="yes">yes</option>
              <option value="no">no</option>
            </select>
         </div>
         <button type="submit" class="btn btn-primary w-100">Apply Filter</button>
      </form>
    </div>
  </div>
  <div class="col-md-9">
    <div class="text-center">
       <h1>Dashboard</h1>
       <button id="trigger-ping" class="btn btn-warning mb-3">Trigger Ping Test</button>
    </div>
    <div id="server-status" class="d-flex flex-wrap justify-content-start">
      <!-- Server cards will be loaded here -->
    </div>
    <div id="progress-container" class="my-3">
      <div id="progress" class="progress">
         <div class="progress-bar" style="width: 0%;">0%</div>
      </div>
    </div>
  </div>
</div>
