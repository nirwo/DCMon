<div class="container">
  <h1 class="text-center my-4">CSV Import</h1>
  <div class="text-center mb-3">
    <a href="/sample_csv/example.csv" class="btn btn-info">Download Example CSV</a>
  </div>
  <form id="csv-import-form" method="post" enctype="multipart/form-data" action="/upload">
    <div class="mb-3">
      <label class="form-label">Select CSV File:</label>
      <input type="file" name="csv_file" accept=".csv" required class="form-control">
    </div>
    <h5 class="mt-3">Column Mapping (optional)</h5>
    <div class="row">
      <div class="col-md-4 mb-2">
        <label>Owner Column:</label>
        <input type="text" name="map_owner" placeholder="owner" class="form-control">
      </div>
      <div class="col-md-4 mb-2">
        <label>Application Column:</label>
        <input type="text" name="map_application" placeholder="application" class="form-control">
      </div>
      <div class="col-md-4 mb-2">
        <label>Server Column:</label>
        <input type="text" name="map_server" placeholder="server" class="form-control">
      </div>
      <div class="col-md-4 mb-2">
        <label>Status Column:</label>
        <input type="text" name="map_status" placeholder="status" class="form-control">
      </div>
      <div class="col-md-4 mb-2">
        <label>Shutdown Sequence Column:</label>
        <input type="text" name="map_shutdown_sequence" placeholder="shutdown_sequence" class="form-control">
      </div>
      <div class="col-md-4 mb-2">
        <label>Pingable Column:</label>
        <input type="text" name="map_pingable" placeholder="pingable" class="form-control">
      </div>
    </div>
    <button type="submit" class="btn btn-primary w-100">Upload CSV</button>
  </form>
</div>
